# Example environment variables for development/production
# required by src/lib/env.ts schema validator

NODE_ENV=development            # one of development|production|test
MONGO_URL=mongodb://localhost:27017/myapp
JWT_SECRET=super-secret-32+chars  # must be at least 32 characters

# optional public settings (exposed to client)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://example.com

# third‑party API keys (optional depending on features)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CLOUD_NAME=s
CLOUD_API_KEY=
CLOUD_API_SECRET=
# NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=https://sky-coding.vercel.app
# mailer settings
NODEMAILER_HOST=
NODEMAILER_PORT=
NODEMAILER_AUTH_USER=
NODEMAILER_AUTH_PASS=
NODEMAILER_SENDER=

# other legacy or app‑specific vars
GUEST_USERNAME=
GUEST_PASSWORD=
GUEST_USER_ID=
PORT=3000
HOST=0.0.0.0

# note: do NOT commit real secrets to version control
